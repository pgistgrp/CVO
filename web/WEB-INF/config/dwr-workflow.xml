<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://getahead.ltd.uk/dwr/dwr20.dtd">

<dwr>


    <allow>


        <filter class="org.pgist.web.DWRLoggingFilter" />


        <create creator="spring" javascript="WorkflowAgent">
            <param name="beanName" value="workflowAgent"/>
            <include method="getTemplates"/>
            <include method="createInstance"/>
            <include method="getWorkflows"/>
            <include method="getWorkflow"/>
            <include method="startWorkflow"/>
            <include method="nextStep"/>
        </create>


    </allow>


</dwr>

