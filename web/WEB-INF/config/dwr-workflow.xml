<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN" "http://getahead.org/dwr//dwr30.dtd">
<dwr>


    <allow>


        <filter class="org.pgist.web.DWRLoggingFilter" />


        <create creator="spring" javascript="WorkflowAgent">
            <param name="beanName" value="workflowAgent"/>
            <include method="getTemplates"/>
            <include method="createInstance"/>
            <include method="getWorkflows"/>
            <include method="getWorkflow"/>
            <include method="getOpenWorkflows"/>
            <include method="startWorkflow"/>
            <include method="nextStep"/>
            <include method="setOpenAccess"/>
        </create>
        
        <convert converter="bean" match="org.pgist.wfengine.OpenWorkflow">
        	<param name="include" value="name, id"/>
        </convert>


    </allow>


</dwr>

