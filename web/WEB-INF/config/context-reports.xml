<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="reportDAO" class="org.pgist.reports.ReportDAOImpl">
	<property name="sessionFactory">
	    <ref bean="sessionFactory" />
	</property>
    </bean>


    <bean id="reportService" parent="baseTransactionProxy">
	<property name="target">
	    <bean class="org.pgist.reports.ReportServiceImpl">
		<property name="reportDAO" ref="reportDAO"/>
	    </bean>
	</property>
    </bean>


    <bean id="reportAgent" class="org.pgist.reports.ReportAgent">
	<property name="reportService" ref="reportService"/>
    </bean>
    
</beans>

