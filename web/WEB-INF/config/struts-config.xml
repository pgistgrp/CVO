<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>


    <form-beans>
        <form-bean name="searchForm" type="org.pgist.search.SearchForm" />
        <form-bean name="userForm" type="org.pgist.system.UserForm" />
        <form-bean name="cctForm" type="org.pgist.cvo.CCTForm" />
        <form-bean name="workflowForm" type="org.pgist.workflow.WorkflowForm" />
    </form-beans>
    
    
    <global-forwards>
        <forward name="login" path="/index.jsp" />
        <forward name="main" path="/main.jsp" />
        <forward name="register" path="/register.jsp" />
        <forward name="error" path="/error.jsp" />
        <forward name="workflow" path="/workflow.do" />
        <forward name="usercp" path="/usercp.jsp" />
    </global-forwards>
    
    
    <action-mappings>
		<!--<action path="/usercp" scope="request" type="org.pgist.system.UsercpAction" />-->
		
		<action name="userForm" path="/usercp" scope="request" type="org.pgist.system.UsercpAction" />
	
    	<action path="/main" scope="request" type="org.pgist.system.MainAction" />
		
        <action name="userForm" path="/login" scope="request" type="org.pgist.system.LoginAction" />
        
        <action path="/logout" type="org.pgist.system.LogoutAction" />
        
        <action name="userForm" path="/register" scope="request" type="org.pgist.system.RegisterAction" />
        
        <action path="/feedback" scope="request" type="org.pgist.system.FeedbackAction">
            <forward name="main" path="/WEB-INF/jsp/system/feedbackMain.jsp" />
        </action>
        
        <action name="searchForm" path="/search" scope="request" type="org.pgist.search.SearchAction">
            <forward name="index" path="/WEB-INF/jsp/search/index.jsp" />
            <forward name="results" path="/WEB-INF/jsp/search/results.jsp" />
        </action>
        
        <action name="cctForm" path="/cctlist" scope="request" type="org.pgist.cvo.CCTListAction">
            <forward name="list" path="/WEB-INF/jsp/cvo/cctlist.jsp" />
        </action>
        
        <action name="cctForm" path="/cctview" scope="request" type="org.pgist.cvo.CCTViewAction">
            <forward name="view" path="/WEB-INF/jsp/cvo/cct.jsp" />
        </action>
        
        <action path="/concern" scope="request" type="org.pgist.cvo.ConcernViewAction">
            <forward name="main" path="/WEB-INF/jsp/cvo/concern.jsp" />
        </action>
        
        <action path="/tagging" scope="request" type="org.pgist.tagging.TaggingAction">
            <forward name="list" path="/WEB-INF/jsp/tagging/taggingMain.jsp" />
        </action>
        
        <action name="cctForm" path="/cstlist" scope="request" type="org.pgist.cvo.CSTListAction">
            <forward name="list" path="/WEB-INF/jsp/cvo/cstlist.jsp" />
        </action>
        
        <action name="cctForm" path="/cstview" scope="request" type="org.pgist.cvo.CSTViewAction">
            <forward name="view" path="/WEB-INF/jsp/cvo/cst.jsp" />
        </action>
        
        <action name="cctForm" path="/catsTree" scope="request" type="org.pgist.cvo.CatsTreeAction">
            <forward name="view" path="/WEB-INF/jsp/cvo/cstCategories.jsp" />
        </action>
        
        <action path="/projectMgr" scope="request" type="org.pgist.projects.ProjectMgrAction">
            <forward name="list" path="/WEB-INF/jsp/projects/projectsList.jsp"/>
            <forward name="edit" path="/WEB-INF/jsp/projects/editProject.jsp"/>
        </action>
        
        <action path="/fundingMgr" scope="request" type="org.pgist.funding.FundingMgrAction">
            <forward name="list" path="/WEB-INF/jsp/projects/fundingList.jsp"/>
            <forward name="edit" path="/WEB-INF/jsp/projects/editFunding.jsp"/>
        </action>
        
        <action path="/fundingPublish" scope="request" type="org.pgist.funding.FundingPublishAction">
            <forward name="main" path="/WEB-INF/jsp/projects/fundingPublish.jsp"/>
        </action>
        
        <action path="/criteriaMgr" scope="request" type="org.pgist.criteria.CriteriaMgrAction">
            <forward name="list" path="/WEB-INF/jsp/criteria/criteriaMgr.jsp"/>
        </action>
        
        <action path="/criteriaPublish" scope="request" type="org.pgist.criteria.CriteriaPublishAction">
            <forward name="list" path="/WEB-INF/jsp/criteria/cctList.jsp"/>
            <forward name="assoc" path="/WEB-INF/jsp/criteria/criteriaAssoc.jsp"/>
        </action>
        
	<action path="/criterialist" scope="request" type="org.pgist.criteria.criteriaListAction">
            <forward name="list" path="/WEB-INF/jsp/criteria/criteriaList.jsp"/>
        </action>
        
        <action path="/sdlist" scope="request" type="org.pgist.discussion.SDListAction">
            <forward name="list" path="/WEB-INF/jsp/discussion/sdList.jsp"/>
        </action>
        
        <action path="/sd" scope="request" type="org.pgist.discussion.SDAction">
            <forward name="main" path="/WEB-INF/jsp/discussion/sdMain.jsp"/>
        </action>
        
        <action path="/sdRoom" scope="request" type="org.pgist.discussion.SDRoomAction">
            <forward name="main" path="/WEB-INF/jsp/discussion/sdRoomMain.jsp"/>
        </action>
        
        <action path="/sdThread" scope="request" type="org.pgist.discussion.SDThreadAction">
            <forward name="main" path="/WEB-INF/jsp/discussion/sdThreadMain.jsp"/>
        </action>
        
        <action path="/sdConcerns" scope="request" type="org.pgist.discussion.SDConcernsAction">
            <forward name="main" path="/WEB-INF/jsp/discussion/sdConcerns.jsp"/>
        </action>
        
        <action name="cctForm" path="/glossaryManage" scope="request" type="org.pgist.glossary.GlossaryManageAction">
            <forward name="list" path="/WEB-INF/jsp/glossary/gmMain.jsp" />
        </action>
        
        <action name="cctForm" path="/glossaryPublic" scope="request" type="org.pgist.glossary.GlossaryPublicAction">
            <forward name="list" path="/WEB-INF/jsp/glossary/gpMain.jsp" />
        </action>
        
        <action name="cctForm" path="/glossaryView" scope="request" type="org.pgist.glossary.GlossaryViewAction">
            <forward name="view" path="/WEB-INF/jsp/glossary/gptermView.jsp" />
        </action>
        
        <action path="/cm" scope="request" type="org.pgist.cm.ChoiceModelerAction">
            <forward name="main" path="/WEB-INF/jsp/cm/cmMain.jsp" />
        </action>
        
        <action name="workflowForm" path="/situationList" scope="request" type="org.pgist.workflow.SituationListAction">
            <forward name="list" path="/WEB-INF/jsp/workflow/situationList.jsp" />
        </action>
        
        <action name="workflowForm" path="/agendaDisplay" scope="request" type="org.pgist.workflow.AgendaDisplayAction">
            <forward name="moderator" path="/WEB-INF/jsp/workflow/agendaDisplay-moderator.jsp" />
            <forward name="member" path="/WEB-INF/jsp/workflow/agendaDisplay-member.jsp" />
        </action>
        
        <action name="workflowForm" path="/participate" scope="request" type="org.pgist.workflow.ParticipateAction" />
        
        <action name="workflowForm" path="/complete" scope="request" type="org.pgist.workflow.CompleteAction" />
        
        <action name="workflowForm" path="/workflow" scope="request" type="org.pgist.workflow.WorkflowAction">
            <forward name="meetings" path="/WEB-INF/jsp/workflow/showMeetings.jsp" />
            <forward name="pmethods" path="/WEB-INF/jsp/workflow/showPmethods.jsp" />
            <forward name="pgames" path="/WEB-INF/jsp/workflow/showPgames.jsp" />
            <forward name="pacts" path="/WEB-INF/jsp/workflow/showPacts.jsp" />
        </action>
        
        <action name="workflowForm" path="/brainStorming" scope="request" type="org.pgist.workflow.pgame.brainstorming.BrainStormingAction">
            <forward name="show" path="/WEB-INF/jsp/pgame/BrainStorming/brainStorming.jsp" />
        </action>
        
        <action name="workflowForm" path="/review" scope="request" type="org.pgist.workflow.pgame.review.ReviewAction">
            <forward name="show" path="/WEB-INF/jsp/pgame/Review/reviewDiscuss.html" />
        </action>
        
        <action name="workflowForm" path="/prioritize" scope="request" type="org.pgist.workflow.pgame.prioritize.PrioritizeAction">
            <forward name="show" path="/WEB-INF/jsp/pgame/Prioritize/prioritizeMain.html" />
        </action>
        
        <action name="workflowForm" path="/hierarchy" scope="request" type="org.pgist.workflow.pgame.hierarchy.HierarchyAction">
            <forward name="show" path="/WEB-INF/jsp/pgame/Hierarchy/hierarchyMain.html" />
        </action>
        
        <action name="workflowForm" path="/qna" scope="request" type="org.pgist.workflow.pgame.question.QnAAction">
            <forward name="show" path="/WEB-INF/jsp/pgame/Question/qnAMain.html" />
        </action>
        
        <action name="workflowForm" path="/sensitivity" scope="request" type="org.pgist.workflow.pgame.sensitivity.SensitivityAnalysisAction">
            <forward name="show" path="/WEB-INF/jsp/pgame/Sensitivity/sensitivityMain.html" />
        </action>
      
    </action-mappings>
    
    
    <controller>
        <set-property property="processorClass" value="org.springframework.web.struts.DelegatingRequestProcessor" />
    </controller>
    
    
    <message-resources parameter="ApplicationResources" />
    
    
    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation" value="/WEB-INF/config/action-servlet.xml" />
    </plug-in>
  
  
</struts-config>
