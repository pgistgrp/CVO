<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    
    <bean id="userDAO" parent="baseTransactionProxy">
      <property name="target">
        <bean class="org.pgist.system.UserDAOImpl">
          <property name="sessionFactory">
            <ref bean="sessionFactory" />
          </property>
        </bean>
      </property>
    </bean>
    
    
    <bean id="emailDAO" class="org.pgist.system.EmailDAOImpl">
        <property name="sessionFactory">
           <ref bean="sessionFactory" />
        </property>
    </bean>
    
    
    <bean id="emailService" parent="baseTransactionProxy">
      <property name="target">
        <bean class="org.pgist.system.EmailServiceImpl">
          <property name="emailDAO" ref="emailDAO"/>
        </bean>
      </property>
    </bean>
    
    
    <bean id="emailSender" parent="baseTransactionProxy">
        <property name="target">
            <bean class="org.pgist.system.EmailSender">
                <property name="emailDAO" ref="emailDAO"/>
                <property name="props">
                    <props>
                        <prop key="mail.smtp.host">smtp.gmail.com</prop>
                        <prop key="mail.transport.protocol">smtp</prop>
                        <prop key="mail.smtp.auth">true</prop>
                        <prop key="mail.smtp.starttls.enable">true</prop>
                        <prop key="mail.smtp.port">587</prop>
                    </props>
                </property>
                <property name="contentType"><value>text/html; charset=UTF-8</value></property>
                <property name="from"><value>@emailFrom@</value></property>
                <property name="fromThrough"><value>@emailFromThrough@</value></property>
                <property name="username"><value>@emailUserName@</value></property>
                <property name="password"><value>@emailPassword@</value></property>
            </bean>
        </property>
    </bean>
    
    
    <bean id="textIndexerDAO" class="org.pgist.search.TextIndexerDAOImpl">
        <property name="sessionFactory">
           <ref bean="sessionFactory" />
        </property>
    </bean>
    
    
    <bean id="indexConcernHandler" class="org.pgist.search.IndexConcernHandler">
        <property name="bctDAO" ref="bctDAO"/>
    </bean>
    
    <bean id="indexConcernCommentHandler" class="org.pgist.search.IndexConcernCommentHandler">
        <property name="bctDAO" ref="bctDAO"/>
    </bean>
    
    <bean id="indexCSTCommentHandler" class="org.pgist.search.IndexCSTCommentHandler">
        <property name="cstDAO" ref="cstDAO"/>
    </bean>
    
    <bean id="indexCHTCommentHandler" class="org.pgist.search.IndexCHTCommentHandler">
        <property name="chtDAO" ref="chtDAO"/>
    </bean>
    
    <bean id="indexVTTCommentHandler" class="org.pgist.search.IndexVTTCommentHandler">
        <property name="vttDAO" ref="vttDAO"/>
    </bean>
    
    <bean id="indexDRTCommentHandler" class="org.pgist.search.IndexDRTCommentHandler">
        <property name="drtDAO" ref="drtDAO"/>
    </bean>
        
    
    <bean id="textIndexer" parent="baseTransactionProxy">
        <property name="target">
            <bean class="org.pgist.search.TextIndexer">
                <property name="textIndexerDAO" ref="textIndexerDAO"/>
                <property name="searchHelper" ref="searchHelper"/>
                <property name="indexHandlers">
                    <map>
                        <entry><key><value>concern</value></key><ref bean="indexConcernHandler" /></entry>
                        <entry><key><value>concern-comment</value></key><ref bean="indexConcernCommentHandler" /></entry>
                        <entry><key><value>cst-comment</value></key><ref bean="indexCSTCommentHandler" /></entry>
                        <entry><key><value>cht-comment</value></key><ref bean="indexCHTCommentHandler" /></entry>
                        <entry><key><value>vtt-comment</value></key><ref bean="indexVTTCommentHandler" /></entry>
                        <entry><key><value>drt-comment</value></key><ref bean="indexDRTCommentHandler" /></entry>
                    </map>
                </property>
            </bean>
        </property>
    </bean>
    
    
