<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>


    <bean id="tagDAO" class="org.pgist.cvo.TagDAOImpl">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>


    <bean id="tagAnalyzer" class="org.pgist.cvo.TagAnalyzer">
        <property name="tagDAO" ref="tagDAO"/>
        <property name="stopWordDAO" ref="stopWordDAO"/>
    </bean>


    <bean id="stopWordDAO" class="org.pgist.cvo.StopWordDAOImpl">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>


    <bean id="stopWordService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="org.pgist.cvo.StopWordServiceImpl">
                <property name="stopWordDAO" ref="stopWordDAO"/>
                <property name="analyzer" ref="tagAnalyzer"/>
            </bean>
        </property>
    </bean>


    <bean id="stopWordAgent" class="org.pgist.cvo.StopWordAgent">
        <property name="stopWordService" ref="stopWordService"/>
    </bean>


    <bean id="glossaryDAO" class="org.pgist.glossary.GlossaryDAOImpl">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>


    <bean id="glossaryService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="org.pgist.glossary.GlossaryServiceImpl">
                <property name="glossaryDAO" ref="glossaryDAO"/>
                <property name="discussionDAO" ref="discussionDAO"/>
                <property name="emailSender" ref="emailSender"/>
            </bean>
        </property>
    </bean>


    <bean id="glossaryManageAgent" class="org.pgist.glossary.GlossaryManageAgent">
        <property name="glossaryService" ref="glossaryService"/>
    </bean>


    <bean id="glossaryPublicAgent" class="org.pgist.glossary.GlossaryPublicAgent">
        <property name="glossaryService" ref="glossaryService"/>
    </bean>


    <!--bean id="tagDAO" class="org.pgist.tag.TagDAOImpl">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>


    <bean id="tagService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="org.pgist.tag.TagServiceImpl">
                <property name="tagDAO" ref="tagDAO"/>
            </bean>
        </property>
    </bean>
    -->


    <bean id="discussionDAO" class="org.pgist.discussion.DiscussionDAOImpl">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
    </bean>


    <bean id="sdService" parent="baseTransactionProxy">
        <property name="target">
            <bean class="org.pgist.discussion.SDServiceImpl">
                <property name="discussionDAO" ref="discussionDAO"/>
            </bean>
        </property>
    </bean>


</beans>

