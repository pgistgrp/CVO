<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 1.0//EN" "http://www.getahead.ltd.uk/dwr/dwr10.dtd">

<dwr>

  <allow>

    <convert converter="bean" match="org.pgist.users.User"/>
    <convert converter="bean" match="org.pgist.model.Post">
      <param name="exclude" value="parent, children, root"/>
    </convert>
    <convert converter="bean" match="org.pgist.cvo.CVO"/>
    <convert converter="bean" match="org.pgist.cvo.Tag">
      <param name="exclude" value="categories"/>
    </convert>
    <convert converter="bean" match="org.pgist.cvo.Category">
      <param name="exclude" value="parent, children, tags"/>
    </convert>

    <create creator="spring" javascript="CVOAgent">
      <param name="beanName" value="cvoAgent"/>
      <include method="getCVOList"/>
      <include method="createCVO"/>
      <include method="extractConcern"/>
      <include method="createConcern"/>
      <include method="getPost"/>
      <include method="createPost"/>
      <include method="getPostGroups"/>
      <include method="getCategoryTags"/>
      <include method="createCategory"/>
      <include method="addTagToCategory"/>
      <include method="deleteTagFromCategory"/>
      <include method="moveCategory"/>
      <include method="createTag"/>
    </create>

  </allow>
  

  <signatures>
  
  
    <![CDATA[
      import java.util.Map;
      import org.pgist.cvo.CVOAgent;
      CVOAgent.getPostGroups(Map<String, String>);
    ]]>
    
    
  </signatures>
  
  
</dwr>

