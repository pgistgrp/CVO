                </outs>
            </declaration>
        </pgame>
        
        <pgame name="pgame-define.projects" description="Define projects in a project suite." auto="false" access="moderator">
            <actionName>action-define.projects</actionName>
            <declaration>
                <ins>
                    <var name="suiteId"/>
                </ins>
            </declaration>
            <timer extension="30000"/>
        </pgame>
        
